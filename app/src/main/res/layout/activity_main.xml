<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.DBPDFReader.AppBarOverlay"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.DBPDFReader.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/open_pdf"
        android:layout_width="326dp"
        android:layout_height="97dp"
        android:text="         open particular PDF file"
        android:layout_below="@+id/appBarLayout"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/open_pdf_list"
        android:layout_width="326dp"
        android:layout_height="97dp"
        android:text="                   On this device"
        android:layout_below="@+id/open_pdf"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/newBtn"
        android:src="@drawable/new_pdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>